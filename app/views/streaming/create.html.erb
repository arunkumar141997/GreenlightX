<% disabled = streaming_data ? true : false %>
<% streaming = streaming_data ? streaming_data["runnng"] : false %>

<div class="container">
  <div class="row pt-7">
    <div class="col col-lg-6 offset-lg-3">
      <div class="card">
        <div class="card-header background">
          <h4 class="mt-2">Live Streaming</h4>
        </div>
        <div class="card-body background">
        <% if streaming %>
          <h4 class="mt-2"><%=streaming_data["meeting_name"]%>  is being streamed</h4>
        <% end %>
            <%= form_for @streaming, url: streaming_path, method: :post do |f|  %>
                <div class="form-group">
                    <%= f.label :url, "Enter RTMP URL", class: "form-label" %>
                    <%= f.text_field :url, class: "form-control #{form_is_invalid?(@streaming, :url)}", placeholder: "RTMP URL from YouTube, Facebook or others", autofocus: "", required: "", value: streaming_data["rtmp_url"] %>
                    <div class="invalid-feedback d-block"><%= @streaming.errors.full_messages_for(:url).first %></div>
                </div>
                <div class="form-group">
                    <%= f.label :viewer_url, "Enter VIEWER URL", class: "form-label" %>
                    <%= f.text_field :viewer_url, class: "form-control #{form_is_invalid?(@streaming, :viewer_url)}", placeholder: "URL to view Live streaming", autofocus: "", required: "", value: streaming_data["viewer_url"] %>
                    <div class="invalid-feedback d-block"><%= @streaming.errors.full_messages_for(:viewer_url).first %></div>
                </div>

                <% if (streaming_data["pid"] == 0) && !streaming_data["runnng"] %>
                  <div class="form-group">
                      <%= f.label :meeting_id, "Select the meeting to stream", class: "form-label mt-5" %>
                      <select id="streaming_meeting_id" name="streaming[meeting_id]" class="selectpicker show-tick w-50">
                          <% streaming_running_meetings.each do |meeting_id, meeting_title| %>
                          <option value="<%= meeting_id %>"><%= meeting_title %></option>
                          <% end %>
                      </select>
                  </div>

                  <div class="form-group">
                    <%= button_tag onclick: "location.reload();", type: :button, class: "btn btn-outline-primary mx-2 sign-in-button" do %>
                      Refresh
                    <% end %>
                    <%= f.submit "Start", class: "btn btn-outline-primary mx-2 sign-in-button" %>
                    
                <% else %>
                    <%= button_tag onclick: "location.reload();", type: :button, class: "btn btn-outline-primary mx-2 sign-in-button" do %>
                      Refresh
                  <% end %>        
                    <%= f.submit "Stop", class: "btn btn-danger mx-2 sign-in-button", :disabled => !disabled %>
                <% end %>
                </div>
            <% end %>
        </div>
      </div>  
    </div>
  </div>  
</div>    
